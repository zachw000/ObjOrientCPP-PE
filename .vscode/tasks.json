{
"tasks": [
    {
        "label": "Build Manager",
        "type": "shell",
        "command": "make",
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "problemMatcher": ["$gcc"],
        "detail": "Build the Manager binary using Makefile"
    },
    {
        "label": "Clean",
        "type": "shell",
        "command": "make clean",
        "group": "build",
        "problemMatcher": []
    },
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/App",
                "-L${workspaceFolder}/bin/",
                "-lmanager",
                "-rpath ${workspaceFolder}/bin/",
                "-I${workspaceFolder}/inc/"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-fdiagnostics-color=always",
