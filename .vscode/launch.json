{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Manager",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Manager",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "Build Manager",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for lldb",
                    "text": "settings set target.run-args",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Debug Manager with args",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Manager",
            "args": [
                "3"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "Build Manager",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "settings set target.run-args",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(lldb) Launch Test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/bin/Manager",
            "args": [
                "2"
            ],
            "linux": {
                "symbolLoadInfo": {
                    "loadAll": true,
                    "exceptionList": ""
                }
            },
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "targetArchitecture": "x64",
            "setupCommands": []
        },
        {
            "name": "C/C++: g++-13 build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/DebugApp",
            "args": [
                "1"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++-13 build active file",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}